<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MarvelGallery.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MarvelGallery"
    Title="Marvel Gallery"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Heroes"
        ContentTemplate="{DataTemplate local:Layouts.HeroesPage.HeroesPage}"
        Route="MainPage"
          Icon="superhero.png"/>

    <ShellContent Title="Favorites"
                  ContentTemplate="{DataTemplate local:Layouts.HeroesPage.HeroesPage}"
                  Route="MainPage"
                  Icon="favorite.png"
                />

    <ShellContent Title="About"
                    ContentTemplate="{DataTemplate local:Layouts.HeroesPage.HeroesPage}"
                  Route="MainPage"
                  Icon="information.png"
                />

</Shell>
